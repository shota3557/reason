<%= form_with(model: @task, local: true) do |form| %>
  <% if @task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@task.errors.count, "error") %> prohibited this project from being saved:</h2>

      <ul>
        <% @task.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

<table>
  <thead>
    <tr>
      <th>達成したいこと</th>
      <th>イメージ画像</th>
    </tr>
  </thead>

  <tbody>
      <tr>
        <td><%= form.text_field :name %></td>
        <td><%= form.file_field :picture %></td>
      </tr>
  </tbody>
</table>

<%= form.fields_for :causes do |cause| %>
  <table>
    <thead>
      <tr>
        <th>できない理由</th>
        <th>画像</th>
        <th>動画</th>
      </tr>
    </thead>
  
    <tbody>
        <tr>
        <td><%= form.text_field :content %></td>
        <td><%= form.file_field :picture %></td>
        <td><%= form.file_field :movie, :accept => 'movie/*' %></td>
        <%= form.hidden_field :task_id, :value => @cause.task_id %>
        <%= form.hidden_field :add_new_cause, :value => @test %>
        </tr>
    </tbody>
  </table>
  <% end %>

  <div class="links">
    <%= link_to_add_association 'できない理由を追加する', form, :causes %>  
  </div>

  <div class="actions">
    <%= form.submit "登録する" %>
  </div>

<% end %>
