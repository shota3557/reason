<h1>ユーザ一覧</h1>

<table>
  <thead>
    <tr>
      <th>ユーザ名</th>
      <th>管理者権限</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.admin ? '管理者':'一般ユーザ' %></td>
        <% if current_user.id != user.id %>
          <td><%= link_to '削除する', user_path(user.id), method: :delete, data: { confirm: '本当に削除しますか？' } %></td>
        <% end %>  
      </tr>
    <% end %>
  </tbody>
</table>

