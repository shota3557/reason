<div class="texts-wrapper">
<div class="contents-title text-center">

<h2>ユーザ登録画面</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :プロフィール写真 %><br />
    <%= f.file_field :picture, autofocus: true, autocomplete: "picture", class: "form-control-file-sm" %>
  </div>

  <div class="form-group">
    <%= f.label :名前 %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "name" , placeholder: "アカウント名を入力してください", class: "form-control-sm" %>
  </div>
  
  <div class="form-group">
    <%= f.label :メールアドレス %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" , placeholder: "メールアドレスを入力してください", class: "form-control-sm" %>
  </div>

  <div class="form-group">
    <%= f.label :パスワード %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %>文字以上に設定してください)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", placeholder: "パスワードを入力してください", class: "form-control-sm" %>
  </div>

  <div class="form-group">
    <%= f.label :パスワード確認 %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" , placeholder: "再度パスワードを入力してください", class: "form-control-sm" %>
  </div>
  
  <div class="checkbox">
  <%= f.label :管理者権限 %>
  <%= f.check_box :admin, {}, "true", "false" %>
  </div>

  <div class="actions">
    <%= f.submit "登録する" ,class: "btn btn-primary" %>
  </div>
<% end %>
